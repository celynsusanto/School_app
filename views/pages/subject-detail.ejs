<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/navbar-style') %>
    <%- include('../partials/table-style')%>
</head>

<body>
    <%- include('../partials/navbar') %>
    <h1 style= "text-align: center"> <%= subject.subject_name %> </h1>
    <h2 style = "text-align: center"><a href = "/subjects"> Return to Subject List</a></h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Score</th>
        </tr>
        <%students.forEach(student => {%>
            <tr>
                <td><%= student.first_name %> <%= student.last_name %></td>
                <% if (!student.SubjectStudent.score) {%>
                    <td><a href ="/subjects/<%= subject.id%>/give-score?studentId=<%= student.id %>">Give Score</a></td>
                <%} else {%>
                    <td><%= student.SubjectStudent.score %></td>
                <%}%>
            </tr>
        <%})%>
    </table>
</body>

</html>